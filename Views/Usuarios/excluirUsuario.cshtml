@model Usuario

<h1>Alerta!</h1>
<h2>Você quer Realmente Excluir o Usuário @Model.Nome (@Model.login)?</h2>
<p>Não terá como reculperar os dados do usuário ao excluir</p>

<form action="ExcluirUsuario" method="POST">
    <input type="hidden" name="id" value="@Model.Id">
    <input type="submit" name="decisao" value="CANCELAR">
    <input type="submit" name="decisao" value="EXCLUIR">
</form>